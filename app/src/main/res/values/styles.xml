<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightOrange</item>
        <item name="colorPrimaryDark">@color/colorDarkOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="question_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginTop">@dimen/textView_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/textView_vertical_margin</item>
    </style>

    <style name="choices_radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="checkBoxes_linerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="answer_EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/hint_last_question</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearanceButton">?android:attr/centerMedium</item>
        <item name="android:onClick">submit</item>
        <item name="android:text">@string/submit_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorLightOrange</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

</resources>
